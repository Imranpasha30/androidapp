<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registor2">
    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="731dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tree">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="127dp"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="132dp"
                android:layout_marginBottom="629dp"
                android:text="SIGN UP"
                android:textColor="#EC4747"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="141dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="526dp"
                android:background="@drawable/edittext_back"
                android:backgroundTint="#00F6F3F3"
                android:backgroundTintMode="screen"
                android:gravity="center"
                android:hint="user name"


                android:textColor="#050505"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="218dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="449dp"
                android:background="@drawable/edittext_back"
                android:backgroundTint="#00F6F3F3"
                android:backgroundTintMode="screen"
                android:gravity="center"
                android:hint="email"

                android:textColor="#050505"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="306dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="361dp"
                android:background="@drawable/edittext_back"
                android:backgroundTint="#00F6F3F3"
                android:backgroundTintMode="screen"
                android:gravity="center"
                android:hint="phone "


                android:textColor="#070707"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="391dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="276dp"
                android:background="@drawable/edittext_back"
                android:backgroundTint="#00F6F3F3"
                android:backgroundTintMode="screen"
                android:gravity="center"
                android:hint="password"


                android:textColor="#0C0C0C"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/rRegister"
                android:layout_width="134dp"

                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="561dp"
                android:layout_marginEnd="224dp"
                android:layout_marginBottom="122dp"

                android:background="@drawable/lofin_back"
                android:text="sign up"></Button>

            <TextView
                android:id="@+id/Rlogin"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="475dp"
                android:layout_marginEnd="180dp"
                android:layout_marginBottom="213dp"
                android:background="@drawable/edittext_back"
                android:gravity="center"
                android:text="Already have a acccount?"
                android:textColor="#C8C40A"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    </LinearLayout>

